<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/set_stage_parameter_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="left|bottom"
            android:textColor="@color/colorText2"
            android:textSize="@dimen/tx_size4"/>

        <TextView
            android:id="@+id/set_stage_parameter_unit_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|bottom"
            android:textColor="@color/colorText2"
            android:textSize="@dimen/tx_size3"/>

        <TextView
            android:id="@+id/set_stage_parameter_value_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|bottom"
            android:textColor="@color/colorText2"
            android:textSize="@dimen/tx_size4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/set_stage_parameter_sub_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_program_stage_value_sub"/>

        <SeekBar
            android:id="@+id/set_stage_parameter_sbar_btn"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="360dp"
            android:layout_height="34dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:progressDrawable="@drawable/pbar_common"
            android:thumb="@drawable/btn_set_parameter"/>

        <Button
            android:id="@+id/set_stage_parameter_add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_program_stage_value_add"/>
    </LinearLayout>
</LinearLayout>