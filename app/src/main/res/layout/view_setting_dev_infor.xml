<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

    <ImageView
        android:id="@+id/dev_infor_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/dev_infor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@id/dev_infor_ic"
        android:textColor="@color/commonColor1"
        android:textSize="@dimen/tx_size3"/>


    <TextView
        android:id="@+id/dev_infor_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/dev_infor_name"
        android:textColor="@color/commonColor1"
        android:textSize="@dimen/tx_size3"/>

    <Button
        android:id="@+id/dev_infor_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_setting_common1"
        android:textColor="@color/commonColor2"
        android:textSize="@dimen/tx_size3"/>
</RelativeLayout>