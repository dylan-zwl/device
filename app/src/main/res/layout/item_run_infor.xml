<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

    <ImageView
        android:id="@+id/run_infor_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_bar_distance"/>

    <TextView
        android:id="@+id/run_infor_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-6dp"
        android:layout_toRightOf="@+id/run_infor_ic"
        android:textColor="@color/commonColor1"
        android:textSize="@dimen/tx_size3"/>

    <TextView
        android:id="@+id/run_infor_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/run_infor_value"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-6dp"
        android:layout_toRightOf="@+id/run_infor_value"
        android:textColor="@color/commonColor1"
        android:textSize="@dimen/tx_size2"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@+id/run_infor_unit"
        android:background="@drawable/bg_bar_divide_line"/>
</RelativeLayout>