<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:background="@color/commonColor2">
    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/run_infor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:textColor="@color/commonColor1"
            android:textSize="@dimen/tx_size2"/>

        <TextView
            android:id="@+id/run_infor_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/run_infor_name"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/run_infor_name"
            android:textColor="@color/commonColor1"
            android:textSize="@dimen/tx_size1"/>

        <TextView
            android:id="@+id/run_infor_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/run_infor_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textColor="@color/commonColor1"
            android:textSize="@dimen/tx_size2"/>
    </RelativeLayout>
</RelativeLayout>