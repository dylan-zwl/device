<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <Button
        android:id="@+id/device_ctl_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_incline"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/device_ctl_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textColor="@color/commonColor1"
            android:textSize="@dimen/tx_size6"/>

        <TextView
            android:id="@+id/device_ctl_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text=""
            android:textColor="@color/commonColor1"
            android:textSize="@dimen/tx_size2"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/device_ctl_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/device_ctl_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_add"/>

        <Button
            android:id="@+id/device_ctl_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/device_ctl_add"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_sub"/>
    </RelativeLayout>
</LinearLayout>