<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:background="@color/commonColor2">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/run_infor_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/commonColor1"
            android:textSize="60dp"/>

        <TextView
            android:id="@+id/run_infor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/commonColor1"
            android:textSize="@dimen/tx_size2"/>

        <TextView
            android:id="@+id/run_infor_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/commonColor1"
            android:textSize="@dimen/tx_size3"/>
    </LinearLayout>
</RelativeLayout>