<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
        android:id="@+id/parameter_settings_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_parameter_name"
        android:gravity="center"
        android:text="类型"
        android:textColor="@color/commonColor1"
        android:textSize="@dimen/tx_size2"/>

    <LinearLayout
        android:id="@+id/parameter_settings_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_parameter_distance"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/parameter_settings_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/commonColor1"
            android:textSize="@dimen/tx_size6"/>

        <TextView
            android:id="@+id/parameter_settings_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="km"
            android:textColor="@color/commonColor1"
            android:textSize="@dimen/tx_size2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/parameter_settings_defvalue_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/parameter_settings_defvalue_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_parameter_defvalue_1"
            android:textColor="@color/commonColor2"
            android:textSize="@dimen/tx_size2"/>

        <Button
            android:id="@+id/parameter_settings_defvalue_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_parameter_defvalue_2"
            android:textColor="@color/commonColor2"
            android:textSize="@dimen/tx_size2"/>

        <Button
            android:id="@+id/parameter_settings_defvalue_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_parameter_defvalue_3"
            android:textColor="@color/commonColor2"
            android:textSize="@dimen/tx_size2"/>
    </LinearLayout>
</LinearLayout>